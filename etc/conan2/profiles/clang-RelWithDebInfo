# code: language=toml
# shellcheck disable=all
# cSpell: disable

include(clang-Common)

[settings]
build_type=RelWithDebInfo

[conf]
# valgrind needs `-gdwarf-4`
# gperftools needs `-03 -DNDEBUG`
tools.build:cxxflags=["-g", "-gdwarf-4", "-O3", "-DNDEBUG"]
tools.build:cflags=["-g", "-gdwarf-4", "-O3", "-DNDEBUG"]
